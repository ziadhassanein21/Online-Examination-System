@model ASQL_Online_Exam_.Models.DashboardViewModel
@{
    ViewData["Title"] = "Student Dashboard";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <title>@ViewData["Title"]</title>

    <style>
        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            min-height: 100vh;
            background: linear-gradient(135deg, #0f0c29, #302b63, #24243e);
            display: flex;
            flex-direction: column;
        }

        /* ===== Navbar ===== */
        .navbar {
            width: 100%;
            height: 10vh;
            background: rgba(31, 41, 55, 0.95);
            backdrop-filter: blur(10px);
            color: #fff;
            padding: 15px 40px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            position: fixed;
            top: 0;
            left: 0;
            z-index: 1000;
            box-shadow: 0 5px 30px rgba(0,0,0,0.3);
        }

        .navbar h2 {
            margin: 0;
            font-size: 22px;
            background: linear-gradient(135deg, #667eea, #764ba2);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .nav-links a {
            margin-left: 25px;
            color: #e5e7eb;
            text-decoration: none;
            font-weight: 500;
            transition: all 0.3s;
            padding: 8px 16px;
            border-radius: 8px;
        }

        .nav-links a:hover {
            background: rgba(102, 126, 234, 0.2);
            color: #667eea;
        }

        .nav-links a.active {
            background: linear-gradient(135deg, #667eea, #764ba2);
            color: #fff;
        }

        /* ===== Main Content ===== */
        .content {
            flex: 1;
            padding: 100px 40px 80px;
            max-width: 1400px;
            margin: 0 auto;
            width: 100%;
        }

        /* ===== Welcome Section ===== */
        .welcome-section {
            margin-bottom: 40px;
            animation: slideDown 0.6s ease;
        }

        .welcome-section h1 {
            font-size: 36px;
            color: #fff;
            margin-bottom: 10px;
        }

        .welcome-section h1 span {
            background: linear-gradient(135deg, #667eea, #764ba2);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .welcome-section p {
            color: #9ca3af;
            font-size: 16px;
        }

        /* ===== Stats Cards ===== */
        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 25px;
            margin-bottom: 40px;
        }

        .stat-card {
            background: rgba(255, 255, 255, 0.05);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 20px;
            padding: 25px;
            text-align: center;
            transition: all 0.3s;
            animation: fadeInUp 0.6s ease;
        }

        .stat-card:hover {
            transform: translateY(-5px);
            background: rgba(255, 255, 255, 0.1);
            box-shadow: 0 20px 40px rgba(0,0,0,0.3);
        }

        .stat-card .icon {
            font-size: 40px;
            margin-bottom: 15px;
        }

        .stat-card .value {
            font-size: 32px;
            font-weight: 700;
            color: #fff;
            margin-bottom: 5px;
        }

        .stat-card .label {
            font-size: 14px;
            color: #9ca3af;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .stat-card.primary {
            background: linear-gradient(135deg, #667eea, #764ba2);
            border: none;
        }

        .stat-card.primary .label {
            color: rgba(255,255,255,0.8);
        }

        /* ===== Section Headers ===== */
        .section-header {
            display: flex;
            align-items: center;
            justify-content: space-between;
            margin-bottom: 20px;
        }

        .section-header h2 {
            color: #fff;
            font-size: 24px;
            display: flex;
            align-items: center;
            gap: 12px;
        }

        .section-header .badge {
            background: linear-gradient(135deg, #667eea, #764ba2);
            color: #fff;
            padding: 4px 12px;
            border-radius: 20px;
            font-size: 14px;
            font-weight: 600;
        }

        /* ===== Exam Cards Grid ===== */
        .exams-section {
            margin-bottom: 40px;
            animation: fadeInUp 0.8s ease;
        }

        .exams-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
            gap: 25px;
        }

        .exam-card {
            background: rgba(255, 255, 255, 0.05);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 20px;
            padding: 25px;
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
        }

        .exam-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 4px;
            height: 100%;
            background: linear-gradient(180deg, #667eea, #764ba2);
        }

        .exam-card:hover {
            transform: translateY(-5px);
            background: rgba(255, 255, 255, 0.1);
            box-shadow: 0 25px 50px rgba(0,0,0,0.3);
        }

        .exam-card.today::before {
            background: linear-gradient(180deg, #10b981, #059669);
        }

        .exam-card .exam-header {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            margin-bottom: 15px;
        }

        .exam-card h3 {
            color: #fff;
            font-size: 18px;
            margin: 0;
            flex: 1;
        }

        .exam-card .exam-status {
            padding: 5px 12px;
            border-radius: 20px;
            font-size: 12px;
            font-weight: 600;
            text-transform: uppercase;
        }

        .exam-status.available {
            background: linear-gradient(135deg, #10b981, #059669);
            color: #fff;
        }

        .exam-status.upcoming {
            background: rgba(102, 126, 234, 0.2);
            color: #667eea;
        }

        .exam-card .exam-meta {
            display: flex;
            flex-wrap: wrap;
            gap: 15px;
            margin-bottom: 15px;
        }

        .exam-meta-item {
            display: flex;
            align-items: center;
            gap: 6px;
            color: #9ca3af;
            font-size: 13px;
        }

        .exam-meta-item .icon {
            font-size: 16px;
        }

        .exam-card .exam-description {
            color: #6b7280;
            font-size: 14px;
            line-height: 1.5;
            margin-bottom: 20px;
        }

        .exam-card .start-btn {
            width: 100%;
            padding: 14px 24px;
            border: none;
            border-radius: 12px;
            background: linear-gradient(135deg, #667eea, #764ba2);
            color: #fff;
            font-size: 15px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
        }

        .exam-card .start-btn:hover {
            transform: scale(1.02);
            box-shadow: 0 10px 30px rgba(102, 126, 234, 0.4);
        }

        .exam-card .start-btn.disabled {
            background: rgba(107, 114, 128, 0.3);
            cursor: not-allowed;
        }

        .exam-card .start-btn.disabled:hover {
            transform: none;
            box-shadow: none;
        }

        /* ===== Empty State ===== */
        .empty-state {
            background: rgba(255, 255, 255, 0.03);
            border: 1px dashed rgba(255, 255, 255, 0.1);
            border-radius: 20px;
            padding: 50px;
            text-align: center;
        }

        .empty-state .icon {
            font-size: 50px;
            margin-bottom: 15px;
        }

        .empty-state h3 {
            color: #fff;
            font-size: 18px;
            margin-bottom: 8px;
        }

        .empty-state p {
            color: #6b7280;
            font-size: 14px;
        }

        /* ===== Footer ===== */
        .footer {
            margin:0px;
            width: 100%;
            text-align: center;
            padding: 20px 0;
            background: rgba(31, 41, 55, 0.95);
            color: #9ca3af;
            font-size: 14px;
            backdrop-filter: blur(10px);
        }

        /* ===== Animations ===== */
        @@keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @@keyframes slideDown {
            from {
                opacity: 0;
                transform: translateY(-20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* ===== Responsive ===== */
        @@media (max-width: 768px) {
            .content {
                padding: 90px 20px 80px;
            }

            .welcome-section h1 {
                font-size: 28px;
            }

            .stats-grid {
                grid-template-columns: repeat(2, 1fr);
            }

            .exams-grid {
                grid-template-columns: 1fr;
            }

            .navbar {
                padding: 12px 20px;
            }

            .nav-links a {
                margin-left: 10px;
                padding: 6px 12px;
                font-size: 13px;
            }
        }

        /* Quick Actions */
        .quick-actions {
            display: flex;
            gap: 15px;
            margin-top: 20px;
        }

        .quick-action-btn {
            padding: 12px 24px;
            background: rgba(255, 255, 255, 0.05);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 12px;
            color: #e5e7eb;
            text-decoration: none;
            font-size: 14px;
            font-weight: 500;
            transition: all 0.3s;
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .quick-action-btn:hover {
            background: rgba(102, 126, 234, 0.2);
            border-color: rgba(102, 126, 234, 0.3);
            color: #667eea;
        }

        /* ===== Profile Section ===== */
        .profile-section {
            display: grid;
            grid-template-columns: 1fr 2fr;
            gap: 25px;
            margin-bottom: 40px;
            animation: fadeInUp 0.7s ease;
        }

        .profile-card {
            background: rgba(255, 255, 255, 0.05);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 20px;
            padding: 30px;
            position: relative;
            overflow: hidden;
        }

        .profile-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: linear-gradient(90deg, #667eea, #764ba2, #f093fb);
        }

        .profile-card .avatar {
            width: 80px;
            height: 80px;
            border-radius: 50%;
            background: linear-gradient(135deg, #667eea, #764ba2);
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 36px;
            margin: 0 auto 20px;
            box-shadow: 0 10px 30px rgba(102, 126, 234, 0.3);
        }

        .profile-card .name {
            color: #fff;
            font-size: 20px;
            font-weight: 600;
            text-align: center;
            margin-bottom: 5px;
        }

        .profile-card .role {
            color: #9ca3af;
            font-size: 14px;
            text-align: center;
            margin-bottom: 20px;
        }

        .profile-info-list {
            list-style: none;
            padding: 0;
            margin: 0;
        }

        .profile-info-list li {
            display: flex;
            align-items: center;
            gap: 12px;
            padding: 12px 0;
            border-bottom: 1px solid rgba(255, 255, 255, 0.05);
            color: #e5e7eb;
            font-size: 14px;
        }

        .profile-info-list li:last-child {
            border-bottom: none;
        }

        .profile-info-list .icon {
            font-size: 18px;
            width: 30px;
            text-align: center;
        }

        .profile-info-list .label {
            color: #6b7280;
            font-size: 12px;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .profile-info-list .value {
            color: #fff;
            font-weight: 500;
        }

        .info-cards-grid {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 20px;
        }

        .info-card {
            background: rgba(255, 255, 255, 0.05);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 16px;
            padding: 25px;
            transition: all 0.3s;
        }

        .info-card:hover {
            background: rgba(255, 255, 255, 0.08);
            transform: translateY(-3px);
        }

        .info-card .card-icon {
            font-size: 32px;
            margin-bottom: 15px;
        }

        .info-card .card-title {
            color: #9ca3af;
            font-size: 12px;
            text-transform: uppercase;
            letter-spacing: 1px;
            margin-bottom: 8px;
        }

        .info-card .card-value {
            color: #fff;
            font-size: 18px;
            font-weight: 600;
        }

        .info-card .card-subtitle {
            color: #6b7280;
            font-size: 13px;
            margin-top: 5px;
        }

        .info-card.track {
            border-left: 4px solid #667eea;
        }

        .info-card.branch {
            border-left: 4px solid #10b981;
        }

        .info-card.courses {
            border-left: 4px solid #f59e0b;
        }

        .info-card.enrolled {
            border-left: 4px solid #ec4899;
        }

        @@media (max-width: 1024px) {
            .profile-section {
                grid-template-columns: 1fr;
            }

            .info-cards-grid {
                grid-template-columns: repeat(2, 1fr);
            }
        }

        @@media (max-width: 600px) {
            .info-cards-grid {
                grid-template-columns: 1fr;
            }
        }

        .footer-bottom {
            width: 100%;
            height: 10vh;
            background-color: rgba(50, 50, 50, 0.5);
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
        }
        main{
        width:100%;
        }
    </style>
</head>

<body>

    <!-- Navbar -->
    <div class="navbar">
        <h2>🎓 ITI Exam Portal</h2>
        <div class="nav-links">
            <a asp-controller="Home" asp-action="Index" class="active">Dashboard</a>
            <a asp-controller="Home" asp-action="MyExams">My Exams</a>
            <a href="#">Profile</a>
            <a asp-controller="Login" asp-action="Logout" style="color:#f87171;">Logout</a>
        </div>
    </div>

    <!-- Main Content -->
    <div class="content">

        <!-- Welcome Section -->
        <div class="welcome-section">
            <h1>Welcome back, <span>@Model.StudentName</span> 👋</h1>
            <p>Here's what's happening with your exams today.</p>

            <div class="quick-actions">
                <a asp-controller="Home" asp-action="MyExams" class="quick-action-btn">
                    📊 View All Grades
                </a>
                <a href="#" class="quick-action-btn">
                    👤 Edit Profile
                </a>
            </div>
        </div>

        <!-- Profile Section -->
        <div class="profile-section">
            <!-- Profile Card -->
            <div class="profile-card">
                <div class="avatar">👤</div>
                <div class="name">@Model.StudentName</div>
                <div class="role">ITI Student</div>
                <ul class="profile-info-list">
                    <li>
                        <span class="icon">📧</span>
                        <div>
                            <div class="label">Email</div>
                            <div class="value">@(Model.StudentEmail ?? "N/A")</div>
                        </div>
                    </li>
                    <li>
                        <span class="icon">📱</span>
                        <div>
                            <div class="label">Phone</div>
                            <div class="value">@(Model.StudentPhone ?? "N/A")</div>
                        </div>
                    </li>
                </ul>
            </div>

            <!-- Info Cards Grid -->
            <div class="info-cards-grid">
                <div class="info-card track">
                    <div class="card-icon">🎯</div>
                    <div class="card-title">Your Track</div>
                    <div class="card-value">@(Model.TrackName ?? "Not Assigned")</div>
                    <div class="card-subtitle">Specialization Path</div>
                </div>
                <div class="info-card branch">
                    <div class="card-icon">🏢</div>
                    <div class="card-title">Branch</div>
                    <div class="card-value">@(Model.BranchName ?? "Not Assigned")</div>
                    <div class="card-subtitle">@(Model.BranchLocation ?? "Location N/A")</div>
                </div>
                <div class="info-card courses">
                    <div class="card-icon">📚</div>
                    <div class="card-title">Total Courses</div>
                    <div class="card-value">@Model.TotalCourses Courses</div>
                    <div class="card-subtitle">In Your Track</div>
                </div>
                <div class="info-card enrolled">
                    <div class="card-icon">📅</div>
                    <div class="card-title">Enrolled Since</div>
                    <div class="card-value">@(Model.EnrollmentDate?.ToString("MMM yyyy") ?? "N/A")</div>
                    <div class="card-subtitle">Member Duration</div>
                </div>
            </div>
        </div>

        <!-- Stats Grid -->
        <div class="stats-grid">
            <div class="stat-card primary">
                <div class="icon">📝</div>
                <div class="value">@Model.TodaysExams.Count</div>
                <div class="label">Available Today</div>
            </div>
            <div class="stat-card">
                <div class="icon">📅</div>
                <div class="value">@Model.UpcomingExams.Count</div>
                <div class="label">Upcoming Exams</div>
            </div>
            <div class="stat-card">
                <div class="icon">✅</div>
                <div class="value">@Model.TotalExamsTaken</div>
                <div class="label">Exams Taken</div>
            </div>
            <div class="stat-card">
                <div class="icon">🏆</div>
                <div class="value">@Model.AverageGrade%</div>
                <div class="label">Average Grade</div>
            </div>
        </div>

        <!-- Today's Exams Section -->
        <div class="exams-section">
            <div class="section-header">
                <h2>🔥 Today's Exams <span class="badge">@Model.TodaysExams.Count Available</span></h2>
            </div>

            @if (Model.TodaysExams.Any())
            {
                <div class="exams-grid">
                    @foreach (var exam in Model.TodaysExams)
                    {
                        <div class="exam-card today">
                            <div class="exam-header">
                                <h3>@exam.ExamTitle</h3>
                                <span class="exam-status available">Available Now</span>
                            </div>
                            <div class="exam-meta">
                                <div class="exam-meta-item">
                                    <span class="icon">📅</span>
                                    @(exam.ExamDate?.ToString("MMM dd, yyyy") ?? "Today")
                                </div>
                                <div class="exam-meta-item">
                                    <span class="icon">⏱️</span>
                                    @(exam.ExamDuration ?? 0) minutes
                                </div>
                                @if (!string.IsNullOrEmpty(exam.CourseName))
                                {
                                    <div class="exam-meta-item">
                                        <span class="icon">📚</span>
                                        @exam.CourseName
                                    </div>
                                }
                            </div>
                            <p class="exam-description">
                                @(string.IsNullOrEmpty(exam.ExamDescription) ? "No description available." : exam.ExamDescription)
                            </p>
                            <form asp-controller="Exam" asp-action="Start" method="get">
                                <input type="hidden" name="examId" value="@exam.ExamId" />
                                <button type="submit" class="start-btn">
                                    🚀 Start Exam
                                </button>
                            </form>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="empty-state">
                    <div class="icon">😴</div>
                    <h3>No Exams Available Today</h3>
                    <p>Enjoy your free time! Check back later for new exams.</p>
                </div>
            }
        </div>

        <!-- Upcoming Exams Section -->
        <div class="exams-section">
            <div class="section-header">
                <h2>📅 Upcoming Exams <span class="badge">@Model.UpcomingExams.Count Scheduled</span></h2>
            </div>

            @if (Model.UpcomingExams.Any())
            {
                <div class="exams-grid">
                    @foreach (var exam in Model.UpcomingExams)
                    {
                        <div class="exam-card">
                            <div class="exam-header">
                                <h3>@exam.ExamTitle</h3>
                                <span class="exam-status upcoming">Upcoming</span>
                            </div>
                            <div class="exam-meta">
                                <div class="exam-meta-item">
                                    <span class="icon">📅</span>
                                    @(exam.ExamDate?.ToString("MMM dd, yyyy") ?? "TBD")
                                </div>
                                <div class="exam-meta-item">
                                    <span class="icon">⏱️</span>
                                    @(exam.ExamDuration ?? 0) minutes
                                </div>
                                @if (!string.IsNullOrEmpty(exam.CourseName))
                                {
                                    <div class="exam-meta-item">
                                        <span class="icon">📚</span>
                                        @exam.CourseName
                                    </div>
                                }
                            </div>
                            <p class="exam-description">
                                @(string.IsNullOrEmpty(exam.ExamDescription) ? "No description available." : exam.ExamDescription)
                            </p>
                            <button type="button" class="start-btn disabled" disabled>
                                🔒 Not Available Yet
                            </button>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="empty-state">
                    <div class="icon">📭</div>
                    <h3>No Upcoming Exams</h3>
                    <p>You're all caught up! No exams scheduled for the near future.</p>
                </div>
            }
        </div>

    </div>

    <!-- Footer -->
    @* <div class="footer-bottom">
        © 2026 ITI Examination System • Information Technology Institute
    </div> *@


</body>
</html>
