@model List<ASQL_Online_Exam_.Models.StudentExamViewModel>
@{
    ViewData["Title"] = "My Exams & Grades";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <title>@ViewData["Title"]</title>

    <style>
        * {
            box-sizing: border-box;
        }

        body {
            margin: 0;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            min-height: 100vh;
            background: linear-gradient(135deg, #1d2671, #c33764);
            display: flex;
            flex-direction: column;
        }

        /* ===== Navbar ===== */
        .navbar {
            width: 100%;
            background: #1f2937;
            color: #fff;
            padding: 15px 40px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            position: fixed;
            top: 0;
            left: 0;
            z-index: 1000;
            box-shadow: 0 5px 15px rgba(0,0,0,0.2);
        }

            .navbar h2 {
                margin: 0;
                font-size: 22px;
            }

        .nav-links a {
            margin-left: 20px;
            color: #e5e7eb;
            text-decoration: none;
            font-weight: 500;
            transition: 0.3s;
        }

            .nav-links a:hover {
                color: #667eea;
            }

            .nav-links a.active {
                color: #667eea;
                border-bottom: 2px solid #667eea;
                padding-bottom: 2px;
            }

        /* ===== Main Content ===== */
        .content {
            flex: 1;
            display: flex;
            justify-content: center;
            align-items: flex-start;
            padding-top: 100px;
            padding-bottom: 80px;
            padding-left: 20px;
            padding-right: 20px;
        }

        .exams-container {
            background: #fff;
            width: 100%;
            max-width: 900px;
            padding: 40px;
            border-radius: 16px;
            box-shadow: 0 25px 50px rgba(0,0,0,0.25);
            animation: fadeIn 0.8s ease;
        }

        h1 {
            margin-bottom: 10px;
            color: #2c3e50;
            text-align: center;
        }

        .subtitle {
            text-align: center;
            color: #666;
            margin-bottom: 30px;
            font-size: 16px;
        }

        /* ===== Table Styles ===== */
        .exams-table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

            .exams-table thead {
                background: linear-gradient(135deg, #667eea, #764ba2);
            }

            .exams-table th {
                padding: 15px 12px;
                text-align: left;
                color: #fff;
                font-weight: 600;
                text-transform: uppercase;
                font-size: 13px;
                letter-spacing: 0.5px;
            }

            .exams-table th:first-child {
                border-radius: 8px 0 0 0;
            }

            .exams-table th:last-child {
                border-radius: 0 8px 0 0;
            }

            .exams-table tbody tr {
                border-bottom: 1px solid #e5e7eb;
                transition: background 0.2s;
            }

            .exams-table tbody tr:hover {
                background: #f8f9fc;
            }

            .exams-table tbody tr:last-child {
                border-bottom: none;
            }

            .exams-table td {
                padding: 16px 12px;
                color: #374151;
                font-size: 14px;
            }

        /* Grade Badge */
        .grade-badge {
            display: inline-block;
            padding: 6px 14px;
            border-radius: 20px;
            font-weight: 600;
            font-size: 13px;
        }

        .grade-excellent {
            background: linear-gradient(135deg, #10b981, #059669);
            color: #fff;
        }

        .grade-good {
            background: linear-gradient(135deg, #3b82f6, #2563eb);
            color: #fff;
        }

        .grade-pass {
            background: linear-gradient(135deg, #f59e0b, #d97706);
            color: #fff;
        }

        .grade-fail {
            background: linear-gradient(135deg, #ef4444, #dc2626);
            color: #fff;
        }

        .grade-pending {
            background: #e5e7eb;
            color: #6b7280;
        }

        /* Duration badge */
        .duration-badge {
            display: inline-flex;
            align-items: center;
            gap: 5px;
            background: #f3f4f6;
            padding: 5px 10px;
            border-radius: 6px;
            font-size: 13px;
            color: #4b5563;
        }

        /* Empty state */
        .empty-state {
            text-align: center;
            padding: 60px 20px;
            color: #6b7280;
        }

            .empty-state .icon {
                font-size: 60px;
                margin-bottom: 20px;
            }

            .empty-state h3 {
                margin: 0 0 10px;
                color: #374151;
            }

            .empty-state p {
                margin: 0;
                font-size: 15px;
            }

        /* ===== Footer ===== */
        .footer {
            width: 100%;
            text-align: center;
            padding: 15px 0;
            background: #1f2937;
            color: #f3f4f6;
            font-size: 14px;
            position: fixed;
            bottom: 0;
            left: 0;
        }

        /* ===== Animation ===== */
        @@keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(30px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* Stats Cards */
        .stats-row {
            display: flex;
            gap: 20px;
            margin-bottom: 30px;
            flex-wrap: wrap;
        }

        .stat-card {
            flex: 1;
            min-width: 150px;
            background: linear-gradient(135deg, #f8f9fc, #fff);
            border-radius: 12px;
            padding: 20px;
            text-align: center;
            border: 1px solid #e5e7eb;
            transition: transform 0.2s, box-shadow 0.2s;
        }

            .stat-card:hover {
                transform: translateY(-3px);
                box-shadow: 0 10px 25px rgba(0,0,0,0.1);
            }

            .stat-card .stat-value {
                font-size: 28px;
                font-weight: 700;
                color: #374151;
                margin-bottom: 5px;
            }

            .stat-card .stat-label {
                font-size: 13px;
                color: #6b7280;
                text-transform: uppercase;
                letter-spacing: 0.5px;
            }

            .stat-card.highlight {
                background: linear-gradient(135deg, #667eea, #764ba2);
            }

                .stat-card.highlight .stat-value,
                .stat-card.highlight .stat-label {
                    color: #fff;
                }
    </style>
</head>

<body>

    <!-- Navbar -->
    <div class="navbar">
        <h2>üéì ITI Exam Portal</h2>
        <div class="nav-links">
            <a asp-controller="Home" asp-action="Index">Dashboard</a>
            <a asp-controller="Home" asp-action="MyExams" class="active">My Exams</a>
            <a href="#">Profile</a>
            <a asp-controller="Login" asp-action="Logout" style="color:#f87171; font-weight:bold;">Logout</a>
        </div>
    </div>

    <!-- Main Content -->
    <div class="content">
        <div class="exams-container">
            <h1>üìö My Exams & Grades</h1>
            <p class="subtitle">View all your completed exams and grades</p>

            @if (Model != null && Model.Count > 0)
            {
                <!-- Stats Row -->
                <div class="stats-row">
                    <div class="stat-card">
                        <div class="stat-value">@Model.Count</div>
                        <div class="stat-label">Total Exams</div>
                    </div>
                    <div class="stat-card">
                        <div class="stat-value">
                            @{
                                var gradesWithValues = Model.Where(e => e.Grade.HasValue).Select(e => e.Grade.Value);
                                var avgGrade = gradesWithValues.Any() ? Math.Round(gradesWithValues.Average(), 1) : 0;
                            }
                            @avgGrade
                        </div>
                        <div class="stat-label">Average Grade</div>
                    </div>
                    <div class="stat-card highlight">
                        <div class="stat-value">@Model.Count(e => e.Grade >= 50)</div>
                        <div class="stat-label">Passed</div>
                    </div>
                </div>

                <!-- Exams Table -->
                <table class="exams-table">
                    <thead>
                        <tr>
                            <th>Exam Title</th>
                            <th>Date</th>
                            <th>Duration</th>
                            <th>Description</th>
                            <th>Grade</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var exam in Model)
                        {
                            <tr>
                                <td><strong>@exam.ExamTitle</strong></td>
                                <td>@(exam.ExamDate.HasValue ? exam.ExamDate.Value.ToString("MMM dd, yyyy") : "N/A")</td>
                                <td>
                                    <span class="duration-badge">
                                        ‚è±Ô∏è @(exam.ExamDuration.HasValue ? $"{exam.ExamDuration} min" : "N/A")
                                    </span>
                                </td>
                                <td>@(string.IsNullOrEmpty(exam.ExamDescription) ? "‚Äî" : exam.ExamDescription)</td>
                                <td>
                                    @if (exam.Grade.HasValue)
                                    {
                                        var gradeClass = exam.Grade >= 85 ? "grade-excellent" :
                                                         exam.Grade >= 70 ? "grade-good" :
                                                         exam.Grade >= 50 ? "grade-pass" : "grade-fail";
                                        <span class="grade-badge @gradeClass">@exam.Grade%</span>
                                    }
                                    else
                                    {
                                        <span class="grade-badge grade-pending">Pending</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <!-- Empty State -->
                <div class="empty-state">
                    <div class="icon">üìù</div>
                    <h3>No Exams Found</h3>
                    <p>You haven't taken any exams yet. Start your first exam from the dashboard!</p>
                </div>
            }
        </div>
    </div>

    <!-- Footer -->
    <div class="footer">
        ¬© 2026 ITI Examination System ‚Ä¢ Information Technology Institute
    </div>

</body>
</html>
