@model List<ASQL_Online_Exam_.Models.StudentExamViewModel>

@{
    ViewData["Title"] = "My Exams & Grades";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <title>@ViewData["Title"]</title>

    <style>
        * {
            box-sizing: border-box;
        }

        body {
            margin: 0;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            min-height: 100vh;
            background: linear-gradient(135deg, #1d2671, #c33764);
            display: flex;
            flex-direction: column;
        }

        /* ===== Navbar ===== */
        .navbar {
            width: 100%;
            height:10vh;
            background: #1f2937;
            color: #fff;
            padding: 15px 40px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            position: fixed;
            top: 0;
            left: 0;
            z-index: 1000;
            box-shadow: 0 5px 15px rgba(0,0,0,0.2);
        }

            .navbar h2 {
                margin: 0;
                font-size: 22px;
            }

        .nav-links a {
            margin-left: 20px;
            color: #e5e7eb;
            text-decoration: none;
            font-weight: 500;
        }

            .nav-links a.active {
                color: #667eea;
                border-bottom: 2px solid #667eea;
            }

        /* ===== Content ===== */
        .content {
            flex: 1;
            display: flex;
            justify-content: center;
            padding: 120px 20px 80px;
        }

        .exams-container {
            background: #fff;
            max-width: 900px;
            width: 100%;
            padding: 40px;
            border-radius: 16px;
            box-shadow: 0 25px 50px rgba(0,0,0,0.25);
        }

        h1 {
            text-align: center;
            margin-bottom: 10px;
        }

        .subtitle {
            text-align: center;
            color: #666;
            margin-bottom: 30px;
        }

        /* ===== Stats ===== */
        .stats-row {
            display: flex;
            gap: 20px;
            margin-bottom: 30px;
            flex-wrap: wrap;
        }

        .stat-card {
            flex: 1;
            min-width: 150px;
            background: #f8f9fc;
            border-radius: 12px;
            padding: 20px;
            text-align: center;
            border: 1px solid #e5e7eb;
        }

            .stat-card.highlight {
                background: linear-gradient(135deg, #667eea, #764ba2);
                color: #fff;
            }

        .stat-value {
            font-size: 28px;
            font-weight: 700;
        }

        .stat-label {
            font-size: 13px;
            text-transform: uppercase;
        }

        /* ===== Table ===== */
        table {
            width: 100%;
            border-collapse: collapse;
        }

        thead {
            background: linear-gradient(135deg, #667eea, #764ba2);
            color: #fff;
        }

        th, td {
            padding: 14px;
            text-align: left;
        }

        tbody tr:hover {
            background: #f8f9fc;
        }

        /* Grade badge */
        .grade-badge {
            padding: 6px 14px;
            border-radius: 20px;
            font-weight: 600;
            font-size: 13px;
            color: #fff;
        }

        .grade-excellent {
            background: #10b981;
        }

        .grade-good {
            background: #3b82f6;
        }

        .grade-pass {
            background: #f59e0b;
        }

        .grade-fail {
            background: #ef4444;
        }

        .grade-pending {
            background: #9ca3af;
        }

        /* Footer */
        .footer {
            background: #1f2937;
            color: #fff;
            text-align: center;
            padding: 15px;
        }
    </style>
</head>

<body>

    <div class="navbar">
        <h2>ðŸŽ“ ITI Exam Portal</h2>
        <div class="nav-links">
            <a asp-controller="Home" asp-action="Index">Dashboard</a>
            <a asp-controller="Home" asp-action="MyExams" class="active">My Exams</a>
            <a asp-controller="Login" asp-action="Logout">Logout</a>
        </div>
    </div>

    <div class="content">
        <div class="exams-container">
            <h1>ðŸ“š My Exams & Grades</h1>
            <p class="subtitle">Your performance overview</p>

            @if (Model != null && Model.Any())
            {
                var graded = Model.Where(e => e.Grade.HasValue && e.totalGrade.HasValue);

                var avgPercentage = graded.Any()
                ? Math.Round(graded.Average(e => (e.Grade.Value * 100.0) / e.totalGrade.Value), 1)
                : 0;

                var passedCount = graded.Count(e => (e.Grade.Value * 100.0 / e.totalGrade.Value) >= 50);

                <div class="stats-row">
                    <div class="stat-card">
                        <div class="stat-value">@Model.Count</div>
                        <div class="stat-label">Total Exams</div>
                    </div>

                    <div class="stat-card">
                        <div class="stat-value">@avgPercentage%</div>
                        <div class="stat-label">Average</div>
                    </div>

                    <div class="stat-card highlight">
                        <div class="stat-value">@passedCount</div>
                        <div class="stat-label">Passed</div>
                    </div>
                </div>

                <table>
                    <thead>
                        <tr>
                            <th>Exam</th>
                            <th>Date</th>
                            <th>Duration</th>
                            <th>Description</th>
                            <th>Grade</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var exam in Model)
                        {
                            <tr>
                                <td><strong>@exam.ExamTitle</strong></td>
                                <td>@exam.ExamDate?.ToString("MMM dd, yyyy")</td>
                                <td>@exam.ExamDuration min</td>
                                <td>@(string.IsNullOrEmpty(exam.ExamDescription) ? "â€”" : exam.ExamDescription)</td>
                                <td>
                                    @if (exam.Grade.HasValue && exam.totalGrade.HasValue)
                                    {
                                        var percentage = (exam.Grade.Value * 100.0) / exam.totalGrade.Value;

                                        var gradeClass =
                                        percentage >= 85 ? "grade-excellent" :
                                        percentage >= 70 ? "grade-good" :
                                        percentage >= 50 ? "grade-pass" : "grade-fail";

                                        <span class="grade-badge @gradeClass">
                                            @exam.Grade / @exam.totalGrade
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="grade-badge grade-pending">Pending</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p style="text-align:center;">No exams found.</p>
            }
        </div>
    </div>

</body>
</html>
